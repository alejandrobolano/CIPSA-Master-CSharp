                    <Label Content="Selecciona figura" HorizontalAlignment="Left" Height="31" Margin="10,194,0,0" VerticalAlignment="Top" Width="100"/>
                    <ComboBox Name="SelectShapeComboBox" HorizontalAlignment="Left" Height="26" Margin="115,194,0,0" VerticalAlignment="Top" Width="87" SelectionChanged="ComboBox_SelectionChanged"/>
                    <Label Content="Para calcular" HorizontalAlignment="Left" Height="25" Margin="207,196,0,0" VerticalAlignment="Top" Width="77"/>
                    <ComboBox Name="CalculateComboBox" HorizontalAlignment="Left" Height="26" Margin="299,195,0,0" VerticalAlignment="Top" Width="89" IsEnabled="False" SelectionChanged="ComboBox_SelectionChanged"/>
                    <Button Name="CalculateButton" Content="Calcular" HorizontalAlignment="Left" Height="26" Margin="299,236,0,0" VerticalAlignment="Top" Width="89" Click="CalculateButton_Click" IsEnabled="False"/>
                    <Label Content="Lado" HorizontalAlignment="Left" Height="23" Margin="82,43,0,0" VerticalAlignment="Top" Width="39" FontSize="8" FontStyle="Italic" FontWeight="Bold"/>
                    <Label Content="A" HorizontalAlignment="Left" Height="21" Margin="82,97,0,0" VerticalAlignment="Top" Width="39" FontSize="8" FontStyle="Italic" FontWeight="Bold" RenderTransformOrigin="1.077,0.611"/>
                    <Label Content="B" HorizontalAlignment="Left" Height="27" Margin="135,97,0,0" VerticalAlignment="Top" Width="39" FontSize="8" FontStyle="Italic" FontWeight="Bold"/>
                    <Label Content="C" HorizontalAlignment="Left" Height="27" Margin="190,97,0,0" VerticalAlignment="Top" Width="39" FontSize="8" FontStyle="Italic" FontWeight="Bold"/>
                    <Label Content="Altura Base A" HorizontalAlignment="Left" Height="27" Margin="245,97,0,0" VerticalAlignment="Top" Width="66" FontSize="8" FontStyle="Italic" FontWeight="Bold"/>
                    <Label Content="Radio" HorizontalAlignment="Left" Height="23" Margin="82,154,0,0" VerticalAlignment="Top" Width="39" FontSize="8" FontStyle="Italic" FontWeight="Bold" RenderTransformOrigin="1.077,0.611"/>
                    <Button Content="Dibujar" Name="DrawButton" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top" Width="81" Click="DrawButton_Click"/>
