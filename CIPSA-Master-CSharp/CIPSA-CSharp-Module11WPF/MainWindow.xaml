        xmlns:local="clr-namespace:CIPSA_CSharp_Module11WPF"
        mc:Ignorable="d"
        Title="Ejercicio 1" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="335" Width="413.667">
    <Grid Margin="0,0,-5.333,2.667" HorizontalAlignment="Left" Width="414">
