                    <TextBox Name="SideATriangleTextBox" HorizontalAlignment="Left" Height="26" Margin="83,66,0,0"  IsEnabled="False"
                             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="38" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBox Name="SideBTriangleTextBox" HorizontalAlignment="Left" Height="26" Margin="135,66,0,0" IsEnabled="False"
                             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="38" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBox Name="SideCTriangleTextBox"  HorizontalAlignment="Left" Height="26" Margin="190,65,0,0" IsEnabled="False"
                             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="38" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBox Name="HighBaseATriangleTextBox"  HorizontalAlignment="Left" Height="26" Margin="244,65,0,0" IsEnabled="False"
                             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="38" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBox Name="RadiusTextBox" HorizontalAlignment="Left" Height="26" Margin="83,123,0,0" IsEnabled="False"
