                    <Button Content="Destruir objetos" Name="DestroyObjectsButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="193" Margin="195,245,0,0" Click="DestroyObjectsButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem Name="InterfacesTabItem" Header="Interfaces - Ejercicio 3">
